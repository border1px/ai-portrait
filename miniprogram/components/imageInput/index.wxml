<view class="image-box" bindtap="chooseImage">
  <image
    wx:if="{{images.length}}"
    class="image" 
    mode="widthFix" 
    src="{{images[0]}}" />
  <view wx:else class="holder">
    <image src="../../images/iids/holder-img.png" mode="widthFix" class="holder-img"/>
    <view class="holder-tip">上传图片</view>
    <view class="holder-tip-desc">半身照、包含脸部特写</view>
  </view>
</view>